page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

.address {
  width: 690rpx;
  margin: 30rpx auto 0;
  height: 215rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: #ccc 5px 5px 5px;
  padding: 10rpx 0 0 0;
}

.address .name {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 10rpx 0 0 0;
}

.address .addr {
  height: 60rpx;
  line-height: 60rpx;
  color: #8c8c8c;
  width: 630rpx;
  margin: 0 auto;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #e0e0e0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address .bot {
  height: 40rpx;
  line-height: 40rpx;
  width: 630rpx;
  margin: 20rpx auto 0;
}

.address .bot image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  float: left;
}

.address .bot .default {
  float: left;
}

.address .bot .del {
  float: right;
}

.address .bot .edit {
  float: right;
  margin-right: 20rpx;
}

.address .bot .edit image {
  width: 30rpx;
  height: 30rpx;
  margin: 4rpx 10rpx 0 0;
}

.address:last-child {
  padding-bottom: 200rpx;
}

.sure {
  position: fixed;
  left: 60rpx;
  bottom: 40rpx;
  z-index: 9;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  width: 630rpx;
  background-color: #663300;
}